<!DOCTYPE html>
<html lang="zh-TW">
<head>
	{{> head}}
	<title> TFT 教師招募網站 - {{title}}</title>
	<!-- Modal Effect -->
	<link rel="stylesheet" type="text/css" href="src/modalEffect/modalEffect.css" />
	<link rel="stylesheet" href = "./dist/css/layout/recruit.css">
	<script src="src/modalEffect/modernizr.custom.js"></script>
</head>
<body>
	{{> header}}
	<div class="overlay"></div>	
	<main class="main-recruit">
		<button class="btn btn-section" id="info">活動說明</button>
		<button class="btn btn-section btn-recruit-disable" id="calendar">活動總表</button>
	</main>

	<section class="container" id="recruit-info">
		{{> recruit-info}}
	</section>

	<section class="container is-hidden" id="recruit-calendar">
		{{> recruit-calendar}}
	</section>
</body>

<script src="dist/js/main.js"></script>
<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
<script src="https://d3js.org/d3.v4.min.js"></script>
<script src="./src/modalEffect/classie.js"></script>
<script src="./src/modalEffect/modalEffects.js"></script>
<script type="text/javascript" src="./dist/js/recruit.js"></script>
<script>
	// this is important for IEs in Md-effects
	var polyfilter_scriptpath = '/src/modalEffect/';

	// transform cause text blurry
	// set filter:blur(1px) and remove can fix it
	$('.md-trigger').on('click', function(e) {
		$('.md-modal').addClass('blurFix');
		setTimeout(function(){
			$('.md-modal').removeClass('blurFix');
		},100)
	});
	
	initRecruitPage();
</script>

</html>